{
  "name": "badgee",
  "author": "Olivier Audard <audard@gmail.com>",
  "version": "1.2.3",
  "description": "a browser console improvement",
  "main": "build/badgee.min.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:dharFr/badgee.git"
  },
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "npm run dev",
    "test": "mocha -R spec --compilers coffee:coffee-script/register test/",
    "prebuild": "npm run clean",
    "build": "browserify -s badgee --extension .coffee src/badgee.coffee -o build/badgee.js",
    "watch": "watchify --debug -s badgee --extension .coffee src/badgee.coffee -o build/badgee.js",
    "postbuild": "npm run minify",
    "clean": "rm -rf build/*",
    "minify": "uglifyjs build/badgee.js > build/badgee.min.js",
    "preversion": "coffeelint src/ && npm run test",
    "version": "npm run build && git add -A build",
    "postversion": "git push --tags origin master",
    "serve": "http-server -p 8000 .",
    "open": "opener http://localhost:8000/test/",
    "live-reload": "live-reload --port 8001 build/",
    "dev": "npm run open -s & parallelshell 'npm run live-reload -s' 'npm run serve -s' 'npm run watch -s'"
  },
  "browserify": {
    "transform": [
      "coffeeify"
    ]
  },
  "devDependencies": {
    "browserify": "^14.0.0",
    "chai": "^3.4.1",
    "coffee-script": "^1.10.0",
    "coffeeify": "^2.0.1",
    "coffeelint": "^1.14.2",
    "http-server": "^0.10.0",
    "live-reload": "^1.1.0",
    "mocha": "^3.0.2",
    "opener": "^1.4.1",
    "parallelshell": "^2.0.0",
    "sinon": "^2.0.0",
    "uglify-js": "^3.0.0",
    "watchify": "^3.6.1"
  },
  "dependencies": {}
}
